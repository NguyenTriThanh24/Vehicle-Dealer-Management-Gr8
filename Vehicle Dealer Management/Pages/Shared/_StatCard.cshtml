@model dynamic

@{
    var label = Model?.Label ?? "Stat";
    var value = Model?.Value ?? "0";
    var icon = Model?.Icon ?? "bi-graph-up";
    var change = Model?.Change ?? null;
    var changeType = Model?.ChangeType ?? "neutral"; // positive, negative, neutral
}

<div class="stat-card">
    <div class="flex justify-between items-center">
        <div class="stat-label">@label</div>
        <i class="bi @icon" style="font-size: 1.5rem; color: var(--accent-cyan);"></i>
    </div>
    <div class="stat-value">@value</div>
    @if (change != null)
    {
        <div class="stat-change @changeType">
            @if (changeType == "positive")
            {
                <i class="bi bi-arrow-up"></i>
            }
            else if (changeType == "negative")
            {
                <i class="bi bi-arrow-down"></i>
            }
            <span>@change</span>
        </div>
    }
</div>

