@page
@model Vehicle_Dealer_Management.Pages.LoginModel
@{
    Layout = "_LayoutPublic";
    ViewData["Title"] = "Đăng nhập";
}

<div class="content" style="display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 80px);">
    <div class="card" style="max-width: 480px; width: 100%;">
        <div class="card-header text-center">
            <h2 class="card-title">Đăng nhập</h2>
            <p class="card-subtitle">Truy cập vào hệ thống EVM Dealer Portal</p>
        </div>
        
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required />
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Đăng nhập
                    </button>
                </div>

                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger" style="background: var(--error-bg); color: var(--error); border: 1px solid var(--error); padding: 1rem; border-radius: var(--radius-sm); margin-top: 1rem;">
                        <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                    </div>
                }
            </form>
        </div>

        <div class="card-footer text-center">
            <p class="text-muted mb-2">Chưa có tài khoản? <a href="/Register">Đăng ký ngay</a></p>
            <hr style="border-color: var(--border); margin: 1rem 0;" />
            <p class="text-muted" style="font-size: 0.875rem;">
                <strong>Test Accounts:</strong><br />
                Customer: <code style="color: var(--accent-cyan);">customer@test.com</code><br />
                Dealer Staff: <code style="color: var(--accent-cyan);">dealerstaff@test.com</code><br />
                EVM Admin: <code style="color: var(--accent-cyan);">admin@test.com</code><br />
                Password: <code style="color: var(--accent-cyan);">123456</code>
            </p>
        </div>
    </div>
</div>

