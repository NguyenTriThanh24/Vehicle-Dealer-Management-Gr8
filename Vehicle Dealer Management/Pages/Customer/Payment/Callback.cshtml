@page "/Customer/Payment/Callback"
@model Vehicle_Dealer_Management.Pages.Customer.Payment.CallbackModel
@{
    ViewData["Title"] = "Kết quả thanh toán";
    ViewData["UserRole"] = "CUSTOMER";
    ViewData["UserName"] = HttpContext.Session.GetString("UserName") ?? "Customer";
}

@await Html.PartialAsync("_PageHeader")

<div class="content-header">
    <h1 class="content-title">Kết quả thanh toán</h1>
</div>

<div class="card" style="max-width: 600px; margin: 0 auto;">
    <div class="card-body text-center" style="padding: 3rem;">
        @if (Model.Status == "success")
        {
            <div style="margin-bottom: 2rem;">
                <div style="width: 5rem; height: 5rem; background: var(--success); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                    <i class="bi bi-check-circle" style="font-size: 3rem; color: white;"></i>
                </div>
                <h2 style="color: var(--success); margin-bottom: 0.5rem;">Thanh toán thành công!</h2>
                <p class="text-muted">@Model.Message</p>
            </div>
        }
        else if (Model.Status == "failed")
        {
            <div style="margin-bottom: 2rem;">
                <div style="width: 5rem; height: 5rem; background: var(--error); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                    <i class="bi bi-x-circle" style="font-size: 3rem; color: white;"></i>
                </div>
                <h2 style="color: var(--error); margin-bottom: 0.5rem;">Thanh toán thất bại</h2>
                <p class="text-muted">@Model.Message</p>
            </div>
        }
        else
        {
            <div style="margin-bottom: 2rem;">
                <div style="width: 5rem; height: 5rem; background: var(--warning); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                    <i class="bi bi-exclamation-triangle" style="font-size: 3rem; color: white;"></i>
                </div>
                <h2 style="color: var(--warning); margin-bottom: 0.5rem;">Lỗi</h2>
                <p class="text-muted">@Model.Message</p>
            </div>
        }

        @if (Model.OrderId.HasValue)
        {
            <div style="margin-top: 2rem;">
                <a href="/Customer/OrderDetail?id=@Model.OrderId.Value" class="btn btn-primary">
                    <i class="bi bi-receipt"></i> Xem chi tiết đơn hàng
                </a>
            </div>
        }

        <div style="margin-top: 1rem;">
            <a href="/Customer/MyOrders" class="btn btn-secondary">
                <i class="bi bi-list-ul"></i> Danh sách đơn hàng
            </a>
        </div>
    </div>
</div>

